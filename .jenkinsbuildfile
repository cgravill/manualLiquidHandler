#!/usr/bin/env python
# Script that is run by jenkins for every commit.

import os
import subprocess

if __name__ == '__main__':
    os.environ["GOPATH"] = os.path.join(os.environ["HOME"], "go")
    cmds = []
    cmds.append("$GOPATH/bin/peanut test")
    subprocess.check_call(' && '.join(cmds), shell=True)
